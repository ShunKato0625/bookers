<h4>Editing Book</h4>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: update_book_path(@book.id), method: :patch do |f| %>

  <h6>Title</h6>
  <%= f.text_field:title %>

  <h6>Body</h6>
  <%= f.text_area:body %>

  <br><%= f.submit 'Update Book' %></br>

  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path(@book) %>

<% end %>